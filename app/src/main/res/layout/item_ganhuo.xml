<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginBottom="5dp"

>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeffffff"
        android:orientation="vertical"
        android:padding="5dp"
    >

        <TextView
            android:id="@+id/item_title" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="dhakdhakshdj"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:id="@+id/item_type" android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:drawableLeft="@drawable/ic_android_black_24dp"
                      android:drawablePadding="3dp"
                      android:text="Android"/>
            <TextView android:id="@+id/item_author" android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:drawableLeft="@drawable/ic_account_box_black_24dp"
                      android:drawablePadding="3dp"
                      android:text="caojun"/>

            <TextView android:id="@+id/item_time" android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:drawableLeft="@drawable/ic_alarm_black_24dp"
                      android:drawablePadding="3dp"
                      android:text="1hour"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>